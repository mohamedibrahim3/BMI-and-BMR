<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IdLineOrange"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultBmr">

    <ImageView
        android:id="@+id/manResIdBmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:src="@drawable/man_res"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/womanResIdBmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:src="@drawable/woman_res"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/terResIdBmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="210dp"
        android:src="@drawable/termometer_bmr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtResIdBmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="TextView"
        android:textColor="#388E3C"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/terResIdBmr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/idLineBlue"
        android:layout_width="5dp"
        android:layout_height="61dp"
        android:layout_marginTop="482dp"
        android:layout_marginEnd="324dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/idLineGreen"
        android:layout_width="5dp"
        android:layout_height="61dp"
        android:layout_marginEnd="104dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/idLineBlue"
        app:layout_constraintEnd_toEndOf="@+id/txtResIdBmr"
        app:layout_constraintTop_toTopOf="@+id/idLineBlue"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/line2" />

    <ImageView
        android:id="@+id/idLineOrange"
        android:layout_width="5dp"
        android:layout_height="61dp"
        android:layout_marginEnd="56dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/txtResIdBmr"
        app:layout_constraintTop_toTopOf="@+id/idLineGreen"
        app:srcCompat="@drawable/line3" />

    <ImageView
        android:id="@+id/idLineRed"
        android:layout_width="5dp"
        android:layout_height="61dp"
        android:layout_marginEnd="116dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/manResIdBmi"
        app:layout_constraintTop_toTopOf="@+id/idLineOrange"
        app:srcCompat="@drawable/line4" />

    <ImageView
        android:id="@+id/IdLinePurple"
        android:layout_width="5dp"
        android:layout_height="61dp"
        android:layout_marginEnd="68dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/manResIdBmi"
        app:layout_constraintTop_toTopOf="@+id/idLineRed"
        app:srcCompat="@drawable/line5" />

</androidx.constraintlayout.widget.ConstraintLayout>