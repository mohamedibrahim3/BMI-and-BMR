<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Verify_data_MainActivity">

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/light_blue"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/cairo_semibold"
        android:text="@string/editTxt"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCal"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/light_blue"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/cairo_semibold"
        android:text="@string/Clctxt"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.slider.Slider
        android:id="@+id/SliderID"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#0583F2"
        android:duplicateParentState="false"
        android:layoutDirection="rtl"
        android:outlineAmbientShadowColor="#0583F2"
        android:outlineSpotShadowColor="#0583F2"
        android:valueFrom="0"
        android:valueTo="70"
        app:haloColor="#F7F7F7"
        app:layout_constraintBottom_toTopOf="@+id/btnCal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:thumbColor="#0597F2"
        app:thumbElevation="6dp"
        app:thumbRadius="20dp"
        app:trackColorActive="#0583F2"
        app:trackHeight="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="46dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="العمر"
        android:textColor="#1F1F1F"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/SliderID"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:srcCompat="@drawable/rectangle" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="71dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="الطول"
        android:textColor="#1F1F1F"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/txtCmId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="69dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="170 Cm"
        android:textColor="#0583F2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/rectangle" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="الوزن"
        android:textColor="#1F1F1F"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/txtKgId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="70 Kg"
        android:textColor="#0583F2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <ImageView
        android:id="@+id/imgManId"
        android:layout_width="81dp"
        android:layout_height="204dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/man1" />

    <ImageView
        android:id="@+id/imgWomanId"
        android:layout_width="81dp"
        android:layout_height="204dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imgManId"
        app:layout_constraintEnd_toEndOf="@+id/imgManId"
        app:layout_constraintStart_toStartOf="@+id/imgManId"
        app:layout_constraintTop_toTopOf="@+id/imgManId"
        app:srcCompat="@drawable/woman1" />


</androidx.constraintlayout.widget.ConstraintLayout>